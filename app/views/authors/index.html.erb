<h1>List of authors</h1>

<a href=/authors/new>New</a>
<table>
  <tr>
    <th>Name</th>
    <th>homepage</th>
    <th></th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Delete', author_path(author), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>